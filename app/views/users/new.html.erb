<h1>Sign up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :login_id %><br>
    <%= f.text_field :login_id, placeholder: 'Enter login ID' %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: 'Enter your name' %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, placeholder: 'Password' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, placeholder: 'Password confirm' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
