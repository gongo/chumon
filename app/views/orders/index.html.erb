<h1>注文一覧</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>注文ID</th>
      <th>金額</th>
      <th>注文日時</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.id %>
          <small><%= link_to '詳細', order %></small>
        </td>
        <td><%= order.total_price %></td>
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
