<h1>注文明細一覧</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>注文ID</th>
      <th>商品名</th>
      <th>注文個数</th>
      <th>合計金額</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |detail| %>
      <tr>
        <td><%= detail.order_id %></td>
        <td><%= detail.product.name %></td>
        <td><%= detail.count %></td>
        <td><%= detail.total_price %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
